{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["node_modules", "dist"],
  "files": ["index.ts", "src/Tree.ts", "src/TreeNode.ts"],
  "include": ["src/**/*.ts", "tests/**/*.ts", "index.ts"]
}
